<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rlWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/an_bg_over_blur"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/question_top" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:layout_weight="90"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:maxLines="6"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/white_timer" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:animationResolution="@android:integer/config_shortAnimTime"
                android:clickable="false"
                android:contextClickable="false"
                android:indeterminate="false"
                android:max="100"
                android:paddingBottom="15dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="15dp"
                android:progress="100"
                android:progressDrawable="@drawable/verticalpb"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/leftProgressBarFlipped"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:animationResolution="@android:integer/config_shortAnimTime"
                android:clickable="false"
                android:contextClickable="false"
                android:indeterminate="false"
                android:max="100"
                android:paddingBottom="13dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="13dp"
                android:progress="0"
                android:progressDrawable="@drawable/verticalpb"
                tools:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llQuestionWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="90dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100">

            <TextView
                android:id="@+id/timerTv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="10s"
                android:textAlignment="center"
                android:textColor="@color/mWhite"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/leftImgView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/circle_with_border"
                android:padding="2dp"
                android:translationZ="10dp"
                app:srcCompat="@color/colorAccent" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/rightImgView"
                android:layout_below="@+id/leftImgView"
                android:layout_marginTop="15dp"
                android:padding="2dp"
                android:translationZ="10dp"
                app:srcCompat="@drawable/sword" />

            <ImageView
                android:id="@+id/rightImgView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/leftImgView"
                android:layout_below="@+id/imageView11"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_with_border"
                android:padding="2dp"
                android:translationZ="10dp"
                app:srcCompat="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/llQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="120dp"
                android:clickable="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_wood_long" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_wood_long_2"
                    android:elevation="0dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_wood_long" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_wood_long_2" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
