<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MonoCycleStudios.team.victorium.MainActivity">

    <com.cesards.cropimageview.CropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:crop="topLeft"
        android:src="@drawable/an_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/victorium_loco_1_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView2BG"
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                app:srcCompat="@drawable/avatar_bg" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                app:srcCompat="@mipmap/appico_w_b" />

                        </RelativeLayout>

                        <!--<EditText-->
                        <!--android:id="@+id/UserNickname"-->
                        <!--android:layout_width="200dp"-->
                        <!--android:layout_height="32dp"-->
                        <!--android:layout_marginTop="60dp"-->
                        <!--android:background="@drawable/inp_wood_col"-->
                        <!--android:ems="10"-->
                        <!--android:inputType="text|textNoSuggestions"-->
                        <!--android:maxLines="1"-->
                        <!--android:selectAllOnFocus="true"-->
                        <!--android:text="@string/UserNicknameText"-->
                        <!--tools:layout_editor_absoluteX="60dp"-->
                        <!--tools:layout_editor_absoluteY="24dp" />-->

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp">

                            <EditText
                                android:id="@+id/InpUserNickname"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/input"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="text|textNoSuggestions"
                                android:maxLines="1"
                                android:paddingEnd="20dp"
                                android:paddingLeft="5dp"
                                android:selectAllOnFocus="false"
                                android:text="@string/UserNicknameText"
                                android:textColor="@color/mBlack"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/username_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="false"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="-30dp"
                                android:layout_marginLeft="-55dp"
                                android:layout_marginTop="-30dp"
                                android:layout_toEndOf="@id/InpUserNickname"
                                android:src="@drawable/btn_edit" />


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="#00ffffff"
                    android:enabled="false"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="28dp">

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="10" />

                        <Button
                            android:id="@+id/BtnCreateGame"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_wood_long"
                            android:text="@string/btnCreateGame"
                            android:textColor="@color/mBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:transitionName="sharedGameBack"
                            android:typeface="normal" />

                        <Button
                            android:id="@+id/BtnFindGame"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/btn_wood_long_2"
                            android:text="@string/btnFindGame"
                            android:textColor="@color/mBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:transitionName="sharedGameBack"
                            android:typeface="normal" />


                        <View
                            android:id="@+id/view4"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="10" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
