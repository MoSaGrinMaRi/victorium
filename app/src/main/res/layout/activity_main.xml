<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MonoCycleStudios.team.victorium.MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:clipToPadding="false"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="0dp">

            <EditText
                android:id="@+id/UserNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:ems="10"
                android:inputType="text"
                android:text="@string/UserNicknameText"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="24dp" />

            <Spinner
                android:id="@+id/ConnectionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UserNickname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:entries="@array/connectionTypeList"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/ConnectBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ConnectionType"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:text="@string/ConnectBtnText"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="176dp" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/ConnectionType"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#00ffffff"
                android:enabled="false"
                android:orientation="horizontal"
                android:visibility="visible">
                <!-- "enabled="false"" only local network now -->

                <Switch
                    android:id="@+id/switchConnectionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false"
                    android:splitTrack="false"
                    android:text="Global Internet" />

                <TextView
                    android:id="@+id/switchTextRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Local Wi-Fi      "
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
