<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MonoCycleStudios.team.victorium.MainActivity">

    <com.cesards.cropimageview.CropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:crop="topLeft"
        android:src="@drawable/tst4_deco" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/victorium_loco_1_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@mipmap/appico_w_b" />

                        <!--<EditText-->
                        <!--android:id="@+id/UserNickname"-->
                        <!--android:layout_width="200dp"-->
                        <!--android:layout_height="32dp"-->
                        <!--android:layout_marginTop="60dp"-->
                        <!--android:background="@drawable/inp_wood_col"-->
                        <!--android:ems="10"-->
                        <!--android:inputType="text|textNoSuggestions"-->
                        <!--android:maxLines="1"-->
                        <!--android:selectAllOnFocus="true"-->
                        <!--android:text="@string/UserNicknameText"-->
                        <!--tools:layout_editor_absoluteX="60dp"-->
                        <!--tools:layout_editor_absoluteY="24dp" />-->

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp">

                            <EditText
                                android:id="@+id/InpUserNickname"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/inp_wood"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="text|textNoSuggestions"
                                android:maxLines="1"
                                android:paddingEnd="20dp"
                                android:paddingLeft="5dp"
                                android:selectAllOnFocus="false"
                                android:text="@string/UserNicknameText"
                                android:textColor="@color/mWhite"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/username_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerHorizontal="false"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="-25dp"
                                android:layout_toEndOf="@id/InpUserNickname"
                                android:padding="3dp"
                                android:src="@drawable/icn_pen" />


                        </RelativeLayout>

                        <Button
                            android:id="@+id/BtnLinkProfile"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/btn_wood_long"
                            android:enabled="false"
                            android:text="@string/btnSingUpFB"
                            android:textColor="@color/mWhite"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:typeface="normal"
                            tools:layout_editor_absoluteX="148dp"
                            tools:layout_editor_absoluteY="176dp" />

                        <View
                            android:id="@+id/view11"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.93" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="#00ffffff"
                    android:enabled="false"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="28dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="10" />

                        <Button
                            android:id="@+id/BtnCreateGame"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_wood_long"
                            android:text="@string/btnCreateGame"
                            android:textColor="@color/mWhite"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:transitionName="sharedGameBack"
                            android:typeface="normal" />

                        <Button
                            android:id="@+id/BtnFindGame"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="@drawable/btn_wood_long"
                            android:text="@string/btnFindGame"
                            android:textColor="@color/mWhite"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:transitionName="sharedGameBack"
                            android:typeface="normal" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="10" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/view6"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="10" />

                            <Button
                                android:id="@+id/btnSound"
                                android:layout_width="52dp"
                                android:layout_height="42dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/b_wood_short"
                                android:text="@string/btnMuteSound"
                                android:textAlignment="center"
                                android:textColor="@color/mWhite"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:typeface="normal"
                                tools:layout_editor_absoluteX="148dp"
                                tools:layout_editor_absoluteY="176dp" />

                            <View
                                android:id="@+id/view5"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="10" />

                            <Button
                                android:id="@+id/btnMusic"
                                android:layout_width="52dp"
                                android:layout_height="42dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/b_wood_short"
                                android:text="@string/btnMuteMusic"
                                android:textColor="@color/mWhite"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:typeface="normal"
                                tools:layout_editor_absoluteX="148dp"
                                tools:layout_editor_absoluteY="176dp" />

                            <View
                                android:id="@+id/view7"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="10" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view4"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="10" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
