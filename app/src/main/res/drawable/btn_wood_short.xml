<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <bitmap
            android:src="@drawable/btn_arrow"
            android:alpha="128">
        </bitmap>
    </item>
    <item android:state_enabled="false">
        <bitmap
            android:src="@drawable/btn_arrow"
            android:tint="#b1b1b1"
            android:alpha="10">
        </bitmap>
    </item>
    <item>
        <bitmap
            android:src="@drawable/btn_arrow">
        </bitmap>
    </item>
</selector>